---
import "~/styles/global.css";

import Footer from "~/components/Footer.astro";
import Header from "~/components/Header.astro";

interface Props {
	title?: string;
	children: any;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="utf8" />
		<meta name="viewport" content="width=device-width" />

		{/* Google Font */}
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Monsieur+La+Doulaise&display=swap"
			rel="stylesheet"
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Zen+Kurenaido&display=swap&text=一人では作れないものが、そこにはあった。"
			rel="stylesheet"
		/>

		{/* SEO */}
		<title>
			{title ?? "情報技術研究部"}
		</title>
		<meta
			name="description"
			content="長野高専のIT系部活動、情報技術研究部の公式サイトです。部活動紹介や活動報告、お知らせなどを掲載しています。"
		/>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
